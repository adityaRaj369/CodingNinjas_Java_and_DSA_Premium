import java.util.Scanner;
public class Solution {
	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		int i=1;
		while(i<=n){
			int spaces=1;
			while(spaces<=n-i){
				System.out.print(" ");
				spaces+=1;
			}
		int stars=1;
		while(stars<=i){
			System.out.print("*");
			stars+=1;
		}
		int stdec=i-1;
		while(stdec>=1){
			System.out.print("*");
			stdec-=1;
		}
		System.out.println();
		i+=1;
		}
	}
}
