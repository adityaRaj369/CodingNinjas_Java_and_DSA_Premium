import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		// Write your code here
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		int sum=0;
		for(int i=1;i<=n;i++) {
			sum+=i;
			for(int j=1;j<=i;j++) {
				System.out.print(j);
				if(j<i) {
					System.out.print("+");
				}
				
			}
			System.out.println("=" + sum);
	}
}
}
