import java.util.Scanner;

public class Solution {

	public static void main(String[] args) {
	Scanner sc =new Scanner(System.in);
		int n=sc.nextInt();
		int i=1;
		while(i<=n) {
			int spaces=1;
			while (spaces<=n-i) {
				System.out.print(" ");
				spaces++;
			}
			int num=1;
			int p=i;
			while(num<=i) {
				System.out.print(p);
				num++;
				p++;
			}
			int dec=2*i-2;
			while(dec>=i) {
				System.out.print(dec);
				dec--;
			}
			System.out.println();
			i++;
	}
	}
