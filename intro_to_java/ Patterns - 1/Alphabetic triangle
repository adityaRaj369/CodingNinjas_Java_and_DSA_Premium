import java.util.Scanner;
public class Solution {
    public static void gameOfAlphabet(int n) {
        // Write your code here
        Scanner s = new Scanner(System.in);

       
        int i = 1;

        while (i <= n) {
            int j = 1;

            while (j <= i) {
                char ch = (char) ('A' + j - 1);

                System.out.print(ch+" ");

                j = j + 1;
            }
            System.out.println();
            i = i + 1;
        }
    }
}
