public class Solution {  

    public static void sortZeroesAndOne(int[] arr) {
    	//Your code goes here
        int z = 0;
        for(int i = 0; i<arr.length; i++){
            if(arr[i] == 0){
                z++;
            }
        }
        for(int i = 0; i<z; i++){
            arr[i] = 0;
        }
        for(int i = z; i<arr.length; i++){
            arr[i] = 1;
        }
    }
}
